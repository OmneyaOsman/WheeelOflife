<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/seashell</item>
        <item name="colorPrimaryDark">@color/seashell</item>
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/turbo</item>
        <item name="android:textColorSecondary">@color/gray</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MainCategoriesButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:layout_marginStart">@dimen/space_8</item>
        <item name="android:layout_marginTop">@dimen/space_8</item>
        <item name="android:layout_marginEnd">@dimen/space_8</item>
        <item name="android:layout_marginBottom">@dimen/space_8</item>
    </style>

    <style name="NewTaskButtonStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:layout_marginStart">@dimen/space_8</item>
        <item name="android:layout_marginTop">@dimen/space_8</item>
        <item name="android:layout_marginEnd">@dimen/space_8</item>
        <item name="android:layout_marginBottom">@dimen/space_8</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="CategoriesTitleStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/space_8</item>
        <item name="android:layout_marginTop">@dimen/space_8</item>
        <item name="android:layout_marginEnd">@dimen/space_8</item>
        <item name="android:layout_marginBottom">@dimen/space_8</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
